{
  "name": "context-caddy",
  "displayName": "Context Caddy",
  "description": "Select files from your workspace and copy a pre-prompt plus their content with multiple profiles and a context view.",
  "version": "1.0",
  "publisher": "yourPublisherName",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.setPrePrompt",
    "onCommand:extension.copyContext",
    "onCommand:extension.newProfile",
    "onCommand:extension.renameProfile",
    "onCommand:extension.switchProfile",
    "onCommand:extension.toggleSelection",
    "onCommand:extension.removeFromContext",
    "onCommand:extension.selectAllInFolder",
    "onCommand:extension.unselectAllInFolder",
    "onCommand:extension.openHowTo",
    "onView:projectContext",
    "onView:selectedFilesView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "extension.setPrePrompt", "title": "Set Pre-Prompt" },
      { "command": "extension.copyContext", "title": "Copy Context!" },
      { "command": "extension.toggleSelection", "title": "Toggle File Selection" },
      { "command": "extension.newProfile", "title": "New Profile" },
      { "command": "extension.renameProfile", "title": "Rename Profile" },
      { "command": "extension.switchProfile", "title": "Switch Profile" },
      { "command": "extension.removeFromContext", "title": "Remove from Context" },
      { "command": "extension.selectAllInFolder", "title": "All" },
      { "command": "extension.unselectAllInFolder", "title": "None" },
      { "command": "extension.openHowTo", "title": "How To Use" }
    ],
    "viewsContainers": {
      "activitybar": [
        { "id": "chatContextContainer", "title": "Context Caddy", "icon": "resources/smiley128.png" }
      ]
    },
    "views": {
      "chatContextContainer": [
        { "id": "projectContext", "name": "Project File Selector" },
        { "id": "selectedFilesView", "name": "Files Selected" }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "extension.newProfile",
          "when": "view == projectContext || view == selectedFilesView",
          "group": "profile@1"
        },
        {
          "command": "extension.renameProfile",
          "when": "view == projectContext || view == selectedFilesView",
          "group": "profile@1"
        },
        {
          "command": "extension.switchProfile",
          "when": "view == projectContext || view == selectedFilesView",
          "group": "profile@1"
        },
        {
          "command": "extension.setPrePrompt",
          "when": "view == projectContext || view == selectedFilesView",
          "group": "context@1"
        },
        {
          "command": "extension.copyContext",
          "when": "view == projectContext || view == selectedFilesView",
          "group": "context@1",
          "title": "$(clippy) Copy"
        },
        {
          "command": "extension.openHowTo",
          "when": "view == projectContext || view == selectedFilesView",
          "group": "help",
          "title": "How To Use"
        }
      ]
    }    
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^14.0.0",
    "typescript": "^4.0.0",
    "vscode": "^1.1.37"
  }
}
